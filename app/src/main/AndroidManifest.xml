<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jbd.termtracker">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_termtrackericon"
        android:roundIcon="@drawable/ic_termtrackericon_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TermTracker">

        <receiver
            android:name=".UI.MyReceiver"
            android:enabled="true"
            android:exported="true"/>

        <activity
            android:name=".UI.ViewNoteDetails"
            android:exported="false"
            android:label="@string/note_details" />
        <activity
            android:name=".UI.ViewAssessmentDetails"
            android:exported="false"
            android:label="@string/assessment_details" />
        <activity
            android:name=".UI.ViewCourseDetails"
            android:exported="false"
            android:label="@string/course_details" />
        <activity
            android:name=".UI.AllTerms"
            android:exported="false"
            android:label="@string/overview_heading" />
        <activity
            android:name=".UI.AddNote"
            android:exported="false"
            android:label="@string/addEdit_note" />
        <activity
            android:name=".UI.AddAssessment"
            android:exported="false"
            android:label="@string/addEdit_assessment" />
        <activity
            android:name=".UI.AddCourse"
            android:exported="false"
            android:label="@string/addEdit_course" />
        <activity
            android:name=".UI.AllAssessments"
            android:exported="false"
            android:label="@string/overview_heading" />
        <activity
            android:name=".UI.AllCourses"
            android:exported="false"
            android:label="@string/overview_heading" />
        <activity
            android:name=".UI.ViewTermDetails"
            android:exported="false"
            android:label="@string/term_details_header" />
        <activity
            android:name=".UI.AddTerm"
            android:exported="false"
            android:label="@string/add_or_edit_term" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_termtrackericon"/>
    </application>

</manifest>